{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ms-vscode-remote.vscode-remote-extensionpack": {}, // Instala o pacote de extensões Remote Development da Microsoft
		"wholroyd.jinja": {}, // Instala a extensão Jinja para destaque de sintaxe
		"ryu1kn.partial-diff": {}, // Instala a extensão Partial Diff para realce de diferenças de arquivos
		"eamodio.gitlens": {}, // Instala a extensão GitLens para integração com o Git
		"ms-vscode.cpptools": {}, // Instala a extensão C/C++ para suporte à linguagem C/C++
		"donjayamanne.githistory": {}, // Instala a extensão Git History para visualizar o histórico do Git
		"coenraads.bracket-pair-colorizer-2": {}, // Instala a extensão Bracket Pair Colorizer 2 para realce de pares de colchetes
		"ms-azuretools.vscode-docker": {}, // Instala a extensão Docker para integração com contêineres Docker
		"fortran-lang.fortran": {} // Instala a extensão Fortran para suporte à linguagem Fortran
	},
	"settings": {
		"workbench.colorTheme": "Dark+ (default dark)", // Define o tema dark
		"fortran.linterEnabled": true // Habilita o linting para a linguagem Fortran
	}
}
